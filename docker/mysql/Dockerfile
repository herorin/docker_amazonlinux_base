FROM mysql:8

######################################
# 基本機能追加
######################################
RUN apt-get update \
 && apt-get install -y \
          procps \
          vim

# mysql設定情報
COPY ./docker/mysql/my.cnf /etc/mysql/my.cnf

######################################
# working directory
######################################
WORKDIR /tmp

######################################
# port指定
######################################
EXPOSE 3306

######################################
# 起動
######################################
CMD [ "mysqld" ]
